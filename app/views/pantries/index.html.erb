<div class="outer-container">
  <%= image_tag "shopping_basket.png", alt: "Pantry Stack. What's in your fridge. Anywhere", class: "basket" %>
  <div class="foods-collection">
    <div class="vertical-tabs-container">
      <div class="vertical-tabs">
        <a href="javascript:void(0)" class="js-vertical-tab vertical-tab is-active" rel="fridgetab">In your fridge</a>
        <a href="javascript:void(0)" class="js-vertical-tab vertical-tab" rel="shoppingtab">Your shopping list</a>
      </div>

      <div class="vertical-tab-content-container">
        <a href="" class="js-vertical-tab-accordion-heading vertical-tab-accordion-heading is-active" rel="fridgetab">In your fridge</a>
        <div id="fridgetab" class="js-vertical-tab-content vertical-tab-content">
          <div id="fridge-search">
            <input class="food-search fridge" type="text" placeholder="food item">
            <button id="fridge-custom" class="custom form-button">
              Put my custom food in the fridge
            </button>
            <ul class="search-results fridge"></ul>
          </div>
          <ul class="fridge-list"></ul>
        </div>

        <a href="" class="js-vertical-tab-accordion-heading vertical-tab-accordion-heading" rel="shoppingtab">Your shopping list</a>
        <div id="shoppingtab" class="js-vertical-tab-content vertical-tab-content">
          <div id="shopping-search">
            <input class="food-search shopping" type="text" placeholder="food item">
            <button id="shopping-custom" class="custom form-button">
              Put my custom food on the shopping list
            </button>
            <ul class="search-results shopping"></ul>
          </div>
          <ul class="shopping-list"></ul>
        </div>
      </div>
    </div>
  </div>
</div>
